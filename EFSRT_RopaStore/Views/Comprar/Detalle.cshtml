@model RopaStore.Domain.Entidad.Producto

@{
    ViewData["Title"] = "Detalle";
}

<h1>Detalle</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.idproducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.idproducto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.precio)
        </dd>

    </dl>
</div>
<div>
    <!--agregar un formulario para ingresar la cantidad de productos a solicitar-->
    <form asp-action="Detalle" method="post">
        @Html.Hidden("codigo",Model.idproducto)
        <em>Ingrese la cantidad</em>
        @Html.TextBox("cantidad",1,new{type="number",min=1,max=Model.cantidad})
        <br />
        <br />
        <input type="submit" value="Agregar" class="btn btn-primary" onclick="" />
        <a asp-action="list" class="btn btn-success">Ir a la tienda</a>
    </form>
</div>
