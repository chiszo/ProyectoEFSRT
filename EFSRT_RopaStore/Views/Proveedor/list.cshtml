@model IEnumerable<RopaStore.Domain.Entidad.Proveedor>

@{
    ViewData["Title"] = "list";
}

<h1>Listado de proveedores</h1>
<form>
    <em>Nombre a filtrar</em>
    @Html.TextBox("nom")
    <button class="btn btn-secondary">Consultar</button>
</form>
<p>
    <a asp-action="Create" class="btn btn-info">Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idproveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.empresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ruc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.representante)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idproveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ruc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.representante)
            </td>
            <td>
                    @Html.ActionLink("Actualizar", "Edit", new { id=item.idproveedor},new {@class="btn btn-secondary"}) |
                    @Html.ActionLink("Eliminar", "Delete", new { id=item.idproveedor } , new { onclick = "return confirm('¿Está seguro que desea eliminar este registro?')" })
            </td>
        </tr>
}
    </tbody>
</table>
